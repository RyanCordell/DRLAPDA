    // );
    PDA_SetScrollLimit(-200);
    PDA_SetScrollArrows2(-200, PDA_SCREEN_WIDTH + 50.0, PDA_SCROLLABLE_HEIGHT + 90.0);
    
    for(int itemIndex = 0; itemIndex < DRLA_ITEMSMAX; itemIndex++)
