    if (localHasBoots) {
        tooltip = "";
        HudMessage(s:"\n"; HUDMSG_PLAIN, PDA_NOEQID, CR_UNTRANSLATED, 0, 0, 0);

        if(CheckInventory("RLEnclaveSetBonusActive")) {
